WindowManager:
    window: window
    id: window
    AreaWindow:
    ConversionWindow:

#----------------------------------------------Area Window--------------------------------------------------------------
<AreaWindow>:
    name: 'areawindow'
	a: a
    b: b
    c: c
    result_total: result_total
    result_last: result_last
	MDBoxLayout:
		orientation: 'vertical'
		MDToolbar:
			title: ' Area App'
			left_action_items: [["ruler-square", lambda x: None]]
		Widget:

	MDTextField:
		id: a
		hint_text: 'Side A'
		pos_hint: {'center_x': 0.4, 'center_y': 0.8}
		size_hint_x: 0.4
		helper_text: '*required'
		helper_text_mode: 'on_error'
		text_color: (0, 0, 0, 1)
		input_type: 'number'
		required: True

	MDTextField:
		id: b
		hint_text: 'Side B'
		pos_hint: {'center_x': 0.4, 'center_y': 0.65}
		size_hint_x: 0.4
		helper_text: '*required'
		helper_text_mode: 'on_error'
		text_color: (0, 0, 0, 1)
		input_type: 'number'
        required: True

	MDTextField:
		id: c
		hint_text: 'Side C'
		pos_hint: {'center_x': 0.4, 'center_y': 0.5}
		size_hint_x: 0.4
		helper_text: '*required'
		helper_text_mode: 'on_error'
		text_color: (0, 0, 0, 1)
		input_type: 'number'
        required: True

	MDRoundFlatButton:
		text: 'AREA'
		pos_hint: {'center_x': 0.15, 'center_y': 0.35}
        on_press: root.area()

    MDRoundFlatButton:
		text: 'CLEAR ALL'
		line_color: 1,0,0,1
		pos_hint: {'center_x': 0.8, 'center_y': 0.35}
        on_press: root.clear_all()

    MDFlatButton:
        id: result_total
        text: ' '
        font_size: '23sp'
        size_hint: (.5, 0.1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
        disabled: True

    MDFlatButton:
        id: result_last
        text: ' '
        font_size: '20sp'
        size_hint: (.5, 0.3)
        pos_hint: {'center_x': 0.5, 'center_y': 0.25}
        disabled: True


    MDFloatingActionButtonSpeedDial:
        id: stack_button
        data: {'exchange.png': 'Conversion'}
        root_button_anim: True
        hint_animation: True
        callback: app.to_convert


#-------------------------------------------Conversion Window-----------------------------------------------------------

<ConversionWindow>:
    name: 'conversion'
    drop1: drop1
    MDBoxLayout:
		orientation: 'vertical'
		MDToolbar:
			title: ' Area App'
			left_action_items: [["arrow-left", lambda x: app.to_area()]]
        Widget:

    MDRaisedButton:
        id: drop1
        text: 'From'
        pos_hint: {'center_x': 0.3, 'center_y': 0.8}
        on_release: app.dropdown1.open()

    MDRaisedButton:
        id: drop2
        text: 'To'
        pos_hint: {'center_x': 0.68, 'center_y': 0.8}
        on_release: app.dropdown2.open()

    MDTextField:
		id: unity
		hint_text: 'Value'
		pos_hint: {'center_x': 0.5, 'center_y': 0.65}
		size_hint_x: 0.4
		helper_text: '*required'
		helper_text_mode: 'on_error'
		text_color: (0, 0, 0, 1)
		input_type: 'number'
		required: True

    MDRoundFlatButton:
		text: 'CONVERT'
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: app.unit_conversion()

    MDFlatButton:
        id: convert
        text: ' '
        font_size: 30
        size_hint: (.5, 0.1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        disabled: True
